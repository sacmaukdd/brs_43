<% provide :title, t("all_users") %>
<h1><%= t "all_user" %></h1>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.username, user %>
      <% if is_admin.present? && !current_user?(user) %>
        <%= link_to t("delete"), admin_user_path(user.id), method: :delete,
          data: {confirm: t("answer_del")} %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>
