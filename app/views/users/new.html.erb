<% provide :title, (t "sign_up") %>
<h1 class="signup"><%= t "signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.label :username, class: "signup-label" %>
    <%= f.text_field :username, class: "signup-input" %>

    <%= f.label :email, class: "signup-label" %>
    <%= f.email_field :email, class: "signup-input" %>

    <%= f.label :password, class: "signup-label"  %>
    <%= f.password_field :password, class: "signup-input" %>

    <%= f.label :password_confirmation, "Confirmation", class: "signup-label"  %>
    <%= f.password_field :password_confirmation, class: "signup-input" %>

    <%= f.submit t("create"), class: "btn btn-primary signup-btn" %>
    <% end %>
  </div>
</div>
